<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <welcome-file-list>
        <welcome-file>KvissNet.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>quizProvider</servlet-name>
        <servlet-class>com.mreapps.kvissnet.backend.server.servlet.QuizProviderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>greetServlet</servlet-name>
        <servlet-class>com.mreapps.kvissnet.backend.server.service.GreetingServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>greetServlet</servlet-name>
        <url-pattern>/kvissnet/greet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>quizProvider</servlet-name>
        <url-pattern>/kvissnet/quiz</url-pattern>
    </servlet-mapping>

</web-app>
